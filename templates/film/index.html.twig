{% extends 'base.html.twig' %}

{% block title %}Ajout de film{% endblock %}

{% block body %}
    <div class="bg-gradient-to-r from-gray-900 via-gray-700 to-gray-600 min-h-screen flex items-center justify-center py-8">
        <div class="container mx-auto p-4 bg-white shadow-md rounded-lg">
            <div class="flex justify-between mb-4">
                <a href="{{ path('app_film_search') }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg shadow-md hover:bg-blue-700 transition-colors duration-300">Rechercher des films</a>
                <a href="{{ path('app_film_new') }}" class="bg-green-600 text-white px-4 py-2 rounded-lg shadow-md hover:bg-green-700 transition-colors duration-300">Ajouter un film</a>
            </div>

            <h1 class="text-3xl font-semibold mb-4 text-gray-800 text-center">Liste des Films</h1>

            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-300 rounded-lg">
                    <thead>
                        <tr class="bg-gray-100 border-b border-gray-300">
                            <th class="py-2 px-3 text-left text-gray-600">Id</th>
                            <th class="py-2 px-3 text-left text-gray-600">Titre</th>
                            <th class="py-2 px-3 text-left text-gray-600">Description</th>
                            <th class="py-2 px-3 text-left text-gray-600">Année</th>
                            <th class="py-2 px-3 text-left text-gray-600">Genre</th>
                            <th class="py-2 px-3 text-left text-gray-600">Image</th>
                            <th class="py-2 px-3 text-left text-gray-600">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for film in films %}
                        <tr class="border-b border-gray-300">
                            <td class="py-2 px-3">{{ film.id }}</td>
                            <td class="py-2 px-3">{{ film.Titre }}</td>
                            <td class="py-2 px-3 truncate">{{ film.Description }}</td>
                            <td class="py-2 px-3">{{ film.Annee }}</td>
                            <td class="py-2 px-3">{{ film.Genre }}</td>
                            <td class="py-2 px-3">
                                <img src="{{ film.Image }}" alt="{{ film.Titre }}" class="w-16 h-16 object-cover rounded-md">
                            </td>
                            <td class="py-2 px-3">
                                <a href="{{ path('app_film_edit', {'id': film.id}) }}" class="bg-yellow-500 text-white px-3 py-1 rounded-lg shadow-md hover:bg-yellow-600 transition-colors duration-300">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4 text-gray-600">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
