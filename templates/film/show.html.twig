{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            {% if film is defined %}
                <tr>
                    <th>Id</th>
                    <td>{{ film.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ film.Titre }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ film.Description }}</td>
                </tr>
                <tr>
                    <th>Annee</th>
                    <td>{{ film.Annee }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ film.Genre }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ film.Image }}</td>
                </tr>
            {% elseif movie is defined %}
                <tr>
                    <th>Titre</th>
                    <td>{{ movie.Title }}</td>
                </tr>
                <tr>
                    <th>Année</th>
                    <td>{{ movie.Year }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ movie.Genre }}</td>
                </tr>
                <tr>
                    <th>Réalisateur</th>
                    <td>{{ movie.Director }}</td>
                </tr>
                <tr>
                    <th>Acteurs</th>
                    <td>{{ movie.Actors }}</td>
                </tr>
                <tr>
                    <th>Résumé</th>
                    <td>{{ movie.Plot }}</td>
                </tr>
                <tr>
                    <th>Affiche</th>
                    <td><img src="{{ movie.Poster }}" alt="Affiche du film"></td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_film_index') }}">Retour à la liste</a>

    {% if film is defined %}
        <a href="{{ path('app_film_edit', {'id': film.id}) }}">Modifier</a>
        {{ include('film/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
