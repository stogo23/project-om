{% extends 'base.html.twig' %}

{% block title %}Recherche de films{% endblock %}

{% block body %}
    <h1>Recherche de films</h1>

    <form method="get" action="{{ path('app_film_search') }}">
        <input type="text" name="title" placeholder="Entrez le titre du film" value="{{ title }}">
        <button type="submit">Rechercher</button>
    </form>

    {% if movie %}
        <h2>Résultats de la recherche</h2>
        <table class="table">
            <tbody>
                <tr>
                    <th>Titre</th>
                    <td>{{ movie.Title }}</td>
                </tr>
                <tr>
                    <th>Année</th>
                    <td>{{ movie.Year }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ movie.Genre }}</td>
                </tr>
                <tr>
                    <th>Réalisateur</th>
                    <td>{{ movie.Director }}</td>
                </tr>
                <tr>
                    <th>Acteurs</th>
                    <td>{{ movie.Actors }}</td>
                </tr>
                <tr>
                    <th>Résumé</th>
                    <td>{{ movie.Plot }}</td>
                </tr>
                <tr>
                    <th>Affiche</th>
                    <td><img src="{{ movie.Poster }}" alt="Affiche du film"></td>
                </tr>
            </tbody>
        </table>
    {% elseif title %}
        <p>Aucun film trouvé pour le titre "{{ title }}".</p>
    {% endif %}
{% endblock %}
