<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <link rel="stylesheet" href="path/to/your/output.css">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>
    <header class="bg-gray-800 text-white py-4">
        <div class="container mx-auto flex items-center justify-between">
            <a href="{{ path('app_film_index') }}" class="text-2xl font-bold ml-4">MoulaCiné</a>
            <nav class="space-x-4">
                <a href="{{ path('app_film_index') }}" class="hover:underline">Accueil</a>
                <a href="{{ path('app_film_search') }}" class="hover:underline">Recherche</a>
                <a href="{{ path('app_film_new') }}" class="hover:underline">Ajouter un Film</a>
            </nav>
        </div>
    </header>
    
{% block body %}{% endblock %}

   
    <footer class="bg-gray-800 text-white py-8 mt-8">
    <div class="container mx-auto text-center">
        <p>&copy; {{ "now"|date("Y") }} MoulaCiné. Tous droits réservés.</p>
        
        <!-- Icônes de réseaux sociaux -->
        <div class="flex justify-center mt-4 space-x-6">
            <a href="https://instagram.com/moulaclub" target="_blank">
                <img src="{{ asset('icons/instagram.svg') }}" alt="Instagram" class="w-6 h-6 hover:opacity-75 transition-opacity duration-300">
            </a>
            <a href="https://linkedin.com/company/moulaclub" target="_blank">
                <img src="{{ asset('icons/linkedin.svg') }}" alt="LinkedIn" class="w-6 h-6 hover:opacity-75 transition-opacity duration-300">
            </a>
            <a href="https://facebook.com/moulaclub" target="_blank">
                <img src="{{ asset('icons/facebook.svg') }}" alt="Facebook" class="w-6 h-6 hover:opacity-75 transition-opacity duration-300">
            </a>
            <a href="https://tiktok.com/@moulaclub" target="_blank">
                <img src="{{ asset('public/icons/tiktok-brands-solid.svg') }}" alt="TikTok" class="w-6 h-6 hover:opacity-75 transition-opacity duration-300">
            </a>
            <a href="https://twitter.com/moulaclub" target="_blank">
                <img src="{{ asset('public/icons/twitter-brands-solid.svg') }}" alt="Twitter" class="w-6 h-6 hover:opacity-75 transition-opacity duration-300">
            </a>
        </div>
        
        <!-- Informations fictives -->
        <div class="mt-4">
            <p class="text-gray-400 text-sm">123 Rue de l'Industrie, 75001 Paris, France</p>
            <p class="text-gray-400 text-sm">Téléphone : +33 1 23 45 67 89</p>
            <p class="text-gray-400 text-sm">Email : contact@moulaclub.com</p>
        </div>
    </div>
</footer>
